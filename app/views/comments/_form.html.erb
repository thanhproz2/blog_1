


<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :Text %><br>
    <%= f.text_area :body %>
  </p>
  <p class="w3-btn" href="http://www.w3schools.com" >
    <%= f.submit :Send %>
  </p>
<% end %>
